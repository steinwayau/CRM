{
  "framework": "nextjs",
  "buildCommand": "npm run build && npx prisma generate",
  "installCommand": "npm install",
  "github": {
    "enabled": true,
    "autoAlias": false
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/reminders/check",
      "schedule": "0 * * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://epg-crm.vercel.app"
  }
} 